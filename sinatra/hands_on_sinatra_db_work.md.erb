rake db:create_migration NAME=create_events
rake db:create_migration NAME=create_people

# Create people
class CreatePeople < ActiveRecord::Migration[5.1]
  def change
    create_table :people do |t|
      t.string :name
      t.date :dob
      t.string :gender
      t.integer :zipcode
    end
  end
end

# Create events
